<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".DailyList">

    <!-- 4/7/15 Mike Bolger - Creating lines to input data -->
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editTask1"
        android:clickable="true"
        android:enabled="true"
        android:editable="true"
        android:hint="Enter a Task"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editTask2"
        android:clickable="true"
        android:enabled="true"
        android:editable="true"
        android:hint="Enter a Task"
        android:layout_below="@+id/editTask1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/editTask1"
        android:layout_alignEnd="@+id/editTask1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editTask3"
        android:clickable="true"
        android:enabled="true"
        android:editable="true"
        android:hint="Enter a Task"
        android:layout_below="@+id/editTask2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/editTask2"
        android:layout_alignEnd="@+id/editTask2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editTask4"
        android:clickable="true"
        android:enabled="true"
        android:editable="true"
        android:hint="Enter a Task"
        android:layout_below="@+id/editTask3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/editTask3"
        android:layout_alignEnd="@+id/editTask3" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editTask5"
        android:clickable="true"
        android:enabled="true"
        android:editable="true"
        android:hint="Enter a Task"
        android:layout_below="@+id/editTask4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/editTask4"
        android:layout_alignEnd="@+id/editTask4" />

</RelativeLayout>
